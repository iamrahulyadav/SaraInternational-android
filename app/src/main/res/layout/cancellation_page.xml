<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your oder Number:-MNO15"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/mediumFontL"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/d3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumFontL" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:1000Pcs"
                android:textSize="@dimen/mediumFontL" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 1200"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumFontL" />
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason for Cancellation"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/mediumFontL"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:background="@drawable/border">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />
        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
          android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/dark_grey" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comments(optional)"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/mediumFontL" />

    </LinearLayout>

        <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Confirm Cancellation"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
           android:background="@color/blue"
            android:textSize="@dimen/mediumFontL" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>